section.stats#stats
  .container
    .stats-wrapper
      .stats-map
        img(class="stats-map__item", src="../img/svg/map.svg", alt="Map")
      .stats-block
        .block-wrapper
          .block-header
            h2.block-header__title Live reports
            .block-elements
              button.block-elements__button.block-elements__button--left(disabled)
                svg(
                  class="block-elements__arrow"
                  width="11"
                  height="19"
                  viewBox="0 0 11 19"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                )
                  path(
                    d="M9.22201 16.8869L1.87891 9.54379L9.22201 2.20068"
                    stroke="#F44A45"
                    stroke-width="2.85"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  )
              button.block-elements__button.block-elements__button--right
                svg(
                  class="block-elements__arrow"
                  width="11"
                  height="19"
                  viewBox="0 0 11 19"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                )
                  path(
                    d="M2.18485 2.06794L9.52795 9.41104L2.18485 16.7541"
                    stroke="#F44A45"
                    stroke-width="2.85"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  )
          .error-boundry.error-boundry--hidden
            img(
              class="error-boundry__img"
              src="../img/svg/icons/sad-icon.svg"
              alt="Sad Face"
            )
            p.error-boundry__text Oops! Something happened wrong :(